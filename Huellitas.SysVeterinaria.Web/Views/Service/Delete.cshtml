﻿@* Referencia al Modelo a utilizar *@
@model Huellitas.SysVeterinaria.EN.Services_EN.Service

@{
    ViewData["Title"] = "Eliminar Servicio"; // Titulo de la Pestaña
}
<br />
<br />
<br />
<h2>Eliminar Servicio Existente</h2>
<br />
<div class="alert alert-danger" role="alert">
    Estas Seguro De Eliminar el Siguiente Registro? Recuerda No Puedes Revertir Los Cambios
</div>
<div>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dt class="col-sm-10">
            @{
                var formattedPrice = string.Format("{0:#,0.00}", Model.Price);
            }
            $ @formattedPrice
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DurationTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DurationTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar Registro" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>
</div>
